<Page x:Class="MyLib.PageSecond"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:MyLib"
      xmlns:customThemes="clr-namespace:MyCustomThemes;assembly=MyCustomThemes"
      Background="{DynamicResource BackgroundColor}"
      Title="PageSecond" Height="400" Width="400">

   

    <Grid Background="{DynamicResource BackgroundColor}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Light" Click="Light_click"   Background="{DynamicResource ButtonBackground}" Foreground="{DynamicResource ButtonForeground}"/>
            <Button Content="Dark" Click="Darck_click" Background="{DynamicResource ButtonBackground}" Foreground="{DynamicResource ButtonForeground}"/>
            <Button Content="Return" Background="{DynamicResource ButtonBackground}" Foreground="{DynamicResource ButtonForeground}" Margin="0,10" Click="Button_Click"/>
            
            <TextBox Text="TextBox" Background="{DynamicResource TextBoxBackground}" Foreground="{DynamicResource TextBoxForeground}" Margin="0,10"/>
        </StackPanel>
    </Grid>
</Page>
